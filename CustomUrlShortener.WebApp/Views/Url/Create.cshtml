@model UrlViewModel
@{
    ViewData["Title"] = "Shorten URL";
}

<h2>Shorten a URL</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="LongURL" placeholder="URL you would like to have shortened" class="form-control" />
        <span asp-validation-for="LongURL" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.ShortURL))
        {
            <div>
                Your new URL is: <a href="@Model.ShortURL" target="_blank">@Model.ShortURL</a>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Shorten" class="btn btn-primary" />
    </div>
</form>

